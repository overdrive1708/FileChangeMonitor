<Window x:Class="FileChangeMonitor.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileChangeMonitor"
        mc:Ignorable="d"
        Title="FileChangeMonitor-AddMonitorFiles" Height="400" Width="600">
    <Grid>
        <ListBox x:Name="listBoxAddFiles" HorizontalAlignment="Left" Height="200" Width="540" Margin="20,20,0,0" VerticalAlignment="Top" AllowDrop="True" PreviewDragOver="ListBoxAddFiles_PreviewDragOver" Drop="ListBoxAddFiles_Drop"/>
        <Label x:Name="labelNote" Content="Please enter memo here." HorizontalAlignment="Left" Margin="20,230,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxNote" HorizontalAlignment="Left" Height="23" Margin="20,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="540"/>
        <Button x:Name="buttonAdd" Content="Add monitor files." HorizontalAlignment="Left" Margin="20,300,0,0" VerticalAlignment="Top" Width="540" Height="40" Click="ButtonAdd_Click"/>

    </Grid>
</Window>
